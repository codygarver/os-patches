#!/bin/bash
base_dist="bionic"

base_url="http://archive.ubuntu.com/ubuntu/dists/$base_dist/main/uefi/grub2-amd64/current"

efi_filenames=(
    'gcdx64.efi.signed'
    'grubnetx64.efi.signed'
    'grubx64.efi.signed'
    'version'
)

for efi_files in "${efi_filenames[@]}" ; do wget "$base_url/$efi_files" ; done
